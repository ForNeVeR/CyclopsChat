<Window x:Class="Cyclops.ViewExperimentations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:ViewExperimentations="clr-namespace:Cyclops.ViewExperimentations" 
        Title="MainWindow" Height="528" Width="525"
		TextOptions.TextFormattingMode="Display">
    <Window.DataContext>
        <ViewExperimentations:TestViewModel/>
    </Window.DataContext>
	<Window.Resources>
		<DataTemplate x:Key="DataTemplate2">
			<Grid Height="32">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<Image Grid.RowSpan="2" Source="{Binding AvatarUrl}" Height="27" Width="29" Stretch="UniformToFill"/>
				<TextBlock Grid.Column="1" Text="{Binding Nick}" FontWeight="Bold" FontSize="13.333" Foreground="#FF565656"/>
				<TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Nick}" Foreground="#FF919191" Margin="0,-2,0,0"/>
			</Grid>
		</DataTemplate>
		<DataTemplate x:Key="DataTemplate1">
			<Grid/>
		</DataTemplate>
	</Window.Resources>
    <Grid>
    	<TabControl ContentTemplate="{DynamicResource DataTemplate1}">
    		<TabItem>
    			<TabItem.Header>
    				<Grid Height="16" Margin="-5,0,-6,0">
    					<Grid.ColumnDefinitions>
    						<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto" />			
						</Grid.ColumnDefinitions>
    						<TextBlock Text="Mainjniuui iug ugi" />
    						<Image Grid.Column="1" Source="stop-error.png" Height="16" Width="16"/>
    				</Grid>			
				</TabItem.Header>
    			<ListBox HorizontalAlignment="Right" Margin="0" Width="219" 
					 	 ItemsSource="{Binding Members}" ItemTemplate="{DynamicResource DataTemplate2}"/>
			</TabItem>
			<TabItem Header="Support"/>
			<TabItem Header="Room with long long long name"/>
			<TabItem Header="Атрарататата бдыщь нах!"/>
		</TabControl>
    </Grid>
</Window>
